{
  "compilerOptions": {
    /* Basic Options */
    "incremental": true,
    "target": "es2015",
    "module": "umd",
    "outDir": "./lib",
    "declaration": true,
    "strict": true,
    "noUnusedLocals": false,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "node",
    "esModuleInterop": true
  },
  "include": [
    "src/*.ts"
  ]
}
